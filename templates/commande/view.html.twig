{% extends 'base.html.twig' %}

{% block title %}Commande {{commande.id}}{% endblock %}

{% block body %}
<div class="content">
    <div class="container">
        <div class="commande">
            <h1>Commande {{commande.id}}</h1>
            <table cellspacing="0" class="commandeTable">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in commande.panierTab(manager) %}
                        <tr>
                            <td class="commandePhoto"><img src="{{asset("/uploads/" ~ item.produit.photo)}}" alt="photo de {{item.produit.nom}}"></td>
                            <td>{{item.produit.nom}}</td>
                            <td>{{item.produit.prix}} &euro;</td>
                            <td>{{item.quantite}}</td>
                            <td>{{item.quantite * item.produit.prix}} &euro;</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr class="total">
                        <td colspan="3">Total :</td>
                        <td>{{commande.total}} €</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
{% endblock %}
