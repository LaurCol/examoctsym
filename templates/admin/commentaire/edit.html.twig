{% extends 'admin/base.html.twig' %}
{% block title %}Modification du commentaire {{commentaire.id}}{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire {{commentaire.id}}</h1>
        <a href="{{ path('admin_commentaires_index') }}" class="btn btn-secondary my-3">Retour</a>
        <div class="alert alert-info">
            <strong>Produit liée:</strong> {{commentaire.produit.nom}}<br>
            <strong>Auteur:</strong> {{commentaire.user.email}}<br>
            <strong>Date de création:</strong> {{commentaire.date | date('d/m/Y H:i')}} 
        </div>
        {{form_start(myForm)}}
            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Modifier le commentaire</button>
        {{form_end(myForm)}}
    </div>
{% endblock %}