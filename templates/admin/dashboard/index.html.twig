{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-5 mb-5 pt-5 pb-5">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div href="{{path("admin_users_index")}}" class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.users}} utilisateurs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div href="{{path("admin_produits_index")}}" class="row">
                            <div class="col-4">
                                <i class="fas fa-guitar fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.produits}} produits en vente</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             <div class="col">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div href="{{path("admin_commandes_index")}}" class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.commandes}} commandes</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             <div class="col">
                <div class="card bg-secondary text-white mb-3 text-center">
                    <div class="card-body">
                        <div href="{{path("admin_commentaires_index")}}" class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.commentaires}} commentaires</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}