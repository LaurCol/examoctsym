{% extends 'admin/base.html.twig' %}

{% block title %}Les commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des commentaires</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User</th>
                    <th>Produit</th>
                    <th class="text-center">Message</th>
                    <th class="text-center">Note</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for commentaire in pagination.data %}
                    <tr>
                        <td>{{commentaire.id}}</td>
                        <td>{{commentaire.id}}</td>
                        <td>{{commentaire.id}}</td>
                        <td class="text-center">{{commentaire.id}}</td>
                        <td class="text-center">{{commentaire.id}}</td>
                        <td>{{commentaire.date | date("H:i:s d-m-Y")}}</td>
                        <td>
                            <a href="{{ path('admin_commentaires_edit', {'id':commentaire.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_commentaires_delete', {'id':commentaire.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}